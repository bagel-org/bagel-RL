{
  "model": {
    "name": "microsoft/DialoGPT-medium",
    "trust_remote_code": false,
    "torch_dtype": "float16",
    "device_map": "auto"
  },
  "training": {
    "method": "sft",
    "num_epochs": 3,
    "learning_rate": 5e-5,
    "batch_size": 4,
    "gradient_accumulation_steps": 1,
    "warmup_steps": 100,
    "max_length": 512,
    "use_lora": true,
    "lora_r": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.1
  },
  "data": {
    "strategy": "manual_templates",
    "max_samples": 200,
    "train_split": 0.8
  },
  "tools": [
    {
      "name": "calculator",
      "description": "Perform mathematical calculations",
      "type": "function",
      "function": "calculator",
      "parameters": {
        "type": "object",
        "properties": {
          "expression": {
            "type": "string",
            "description": "Mathematical expression to evaluate"
          }
        },
        "required": ["expression"]
      }
    },
    {
      "name": "weather",
      "description": "Get weather information for a location",
      "type": "function",
      "function": "weather",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "description": "Location to get weather for"
          }
        },
        "required": ["location"]
      }
    },
    {
      "name": "search",
      "description": "Search for information on the internet",
      "type": "function",
      "function": "search",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          }
        },
        "required": ["query"]
      }
    }
  ],
  "evaluation": {
    "metrics": ["tool_accuracy", "response_quality", "tool_format_correctness"],
    "eval_steps": 100
  },
  "wandb": {
    "enabled": false,
    "project": "llm-tool-training",
    "run_name": "calculator-experiment"
  },
  "seed": 42
}
