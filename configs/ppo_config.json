{
  "model": {
    "name": "microsoft/DialoGPT-small",
    "trust_remote_code": false,
    "torch_dtype": "float16",
    "device_map": "auto"
  },
  "training": {
    "method": "ppo",
    "num_epochs": 2,
    "learning_rate": 1e-5,
    "batch_size": 2,
    "mini_batch_size": 1,
    "ppo_epochs": 4,
    "gradient_accumulation_steps": 2,
    "warmup_steps": 50,
    "max_length": 256,
    "use_lora": true,
    "lora_r": 8,
    "lora_alpha": 16
  },
  "data": {
    "strategy": "teacher_mode",
    "max_samples": 100,
    "train_split": 0.9
  },
  "tools": [
    {
      "name": "calculator",
      "description": "Perform basic arithmetic operations",
      "type": "function",
      "function": "calculator",
      "parameters": {
        "type": "object",
        "properties": {
          "expression": {
            "type": "string",
            "description": "Mathematical expression (e.g., '2 + 3', '10 * 5')"
          }
        },
        "required": ["expression"]
      }
    }
  ],
  "evaluation": {
    "metrics": ["tool_accuracy", "reward"],
    "eval_steps": 50
  },
  "tensorboard": {
    "enabled": true,
    "log_dir": "outputs/runs"
  },
  "seed": 42
}
